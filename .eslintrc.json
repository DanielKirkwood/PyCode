{
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "next",
    "prettier",
    "plugin:@next/next/recommended"
  ],
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["node_modules/", ".next/", ".coverage"],
  "settings": {
    "import/resolver": {
      "alias": [
        ["@/components", "./components"]
      ]
    }
  }
}
